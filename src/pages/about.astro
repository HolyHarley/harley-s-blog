    <style>
        .about-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* ヒーローセクション */
        .hero {
            text-align: center;
            padding: 4rem 0 3rem;
        }

        h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
            line-height: 1.2;
        }

        .text-gradient {
            background: linear-gradient(
                to right,
                var(--color-primary),
                var(--color-accent)
            );
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .tagline {
            font-size: 1.5rem;
            color: var(--color-text-muted);
        }

        /* コンテンツグリッド */
        .content-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            margin-top: 2rem;
        }

        @media (min-width: 768px) {
            .content-grid {
                grid-template-columns: 1fr 1fr;
                align-items: start;
            }
        }

        /* プロフィールカード */
        .profile-card {
            background: var(--color-surface);
            border: 1px solid var(--color-border);
            border-radius: 1rem;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .profile-image-container {
            width: 120px;
            height: 120px;
            margin: 0 auto 1.5rem;
            border-radius: 50%;
            overflow: hidden;
            border: 3px solid var(--color-primary);
            padding: 3px;
            background: var(--color-bg);
        }

        .profile-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(
                135deg,
                var(--color-primary),
                var(--color-accent)
            );
            border-radius: 50%;
        }

        .profile-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 50%;
        }

        h2 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .role {
            color: var(--color-primary);
            font-weight: 600;
            margin-bottom: 1rem;
        }

        .bio {
            color: var(--color-text-muted);
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .social-links {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .social-btn {
            padding: 0.5rem 1.5rem;
            background: var(--color-bg);
            border: 1px solid var(--color-border);
            border-radius: 2rem;
            color: var(--color-text);
            text-decoration: none;
            transition: all 0.2s ease;
        }

        .social-btn:hover {
            border-color: var(--color-primary);
            color: var(--color-primary);
            transform: translateY(-2px);
        }

        /* スキルセクション */
        .skills-section {
            padding: 1rem 0;
        }

        .skills-section h3 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            position: relative;
            display: inline-block;
        }

        .skills-list {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .skill-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        .skill-bar-bg {
            height: 10px;
            background: var(--color-border);
            border-radius: 10px;
            overflow: hidden;
        }

        .skill-bar-fill {
            height: 100%;
            background: linear-gradient(
                90deg,
                var(--color-primary),
                var(--color-accent)
            );
            border-radius: 10px;
            transition: width 1s ease-out;
        }

        /* アニメーション */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        .animate-slide-up {
            opacity: 0;
            animation: fadeIn 0.8s ease-out forwards;
        }

        /* コンタクトセクション */
        .contact-section {
            margin-top: 4rem;
            text-align: center;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .contact-section h3 {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .contact-section p {
            color: var(--color-text-muted);
            margin-bottom: 2rem;
        }

        .contact-form {
            text-align: left;
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        label {
            font-weight: 500;
            color: var(--color-text);
        }

        input,
        textarea {
            padding: 0.75rem;
            border-radius: 0.5rem;
            border: 1px solid var(--color-border);
            background: var(--color-bg);
            color: var(--color-text);
            font-family: inherit;
            transition: border-color 0.2s;
        }

        input:focus,
        textarea:focus {
            outline: none;
            border-color: var(--color-primary);
        }

        .submit-btn {
            padding: 0.75rem 2rem;
            background: linear-gradient(
                to right,
                var(--color-primary),
                var(--color-accent)
            );
            color: white;
            border: none;
            border-radius: 2rem;
            font-weight: 600;
            cursor: pointer;
            transition: opacity 0.2s;
            align-self: center;
            width: 100%;
            max-width: 200px;
        }

        .submit-btn:hover {
            opacity: 0.9;
        }
    </style>
</Layout>
