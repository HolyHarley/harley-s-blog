        { name: "GitHub", url: "https://github.com/", icon: "github" },
        { name: "Twitter", url: "https://twitter.com/", icon: "twitter" },
    ],
};

// スキル情報
const skills = [
    { name: "Astro", level: 90 },
    { name: "React", level: 85 },
    { name: "TypeScript", level: 80 },
    { name: "UI Design", level: 75 },
];
---

<Layout title="About Me" description="Kohoriのプロフィールページです">
    <div class="about-container">
        {/* ヒーローセクション */}
        <section class="hero animate-fade-in">
            <h1>About <span class="text-gradient">Me</span></h1>
            <p class="tagline">Creating the future with code.</p>
        </section>

        <div class="content-grid">
            {/* プロフィールセクション */}
            <section
                class="profile-card animate-slide-up"
                style="animation-delay: 0.1s;"
            >
                <div class="profile-image-container">
                    {/* 画像がない場合のフォールバックとして背景色を表示 */}
                    <div class="profile-placeholder"></div>
                    {
                        /* <img src={profile.avatar} alt={profile.name} class="profile-image" /> */
                    }
                </div>
                <h2>{profile.name}</h2>
                <p class="role">{profile.role}</p>
                <p class="bio">{profile.bio}</p>

                <div class="social-links">
                    {
                        profile.socials.map((social) => (
                            <a
                                href={social.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="social-btn"
                            >
                                {social.name}
                            </a>
                        ))
                    }
                </div>
            </section>

            {/* スキルセクション */}
            <section
                class="skills-section animate-slide-up"
                style="animation-delay: 0.2s;"
            >
                <h3>Technical Skills</h3>
                <div class="skills-list">
                    {
                        skills.map((skill) => (
                            <div class="skill-item">
                                <div class="skill-info">
                                    <span>{skill.name}</span>
                                    <span>{skill.level}%</span>
                                </div>
                                <div class="skill-bar-bg">
                                    <div
                                        class="skill-bar-fill"
                                        style={`width: ${skill.level}%`}
                                    />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </section>
