---
interface Props {
    date: Date;
}

const { date } = Astro.props;
const d = date instanceof Date ? date : new Date(date);
---

<time datetime={d.toISOString()}>
    {
        d.toLocaleDateString("ja-JP", {
            year: "numeric",
            month: "numeric",
            day: "numeric",
        })
    }
</time>
